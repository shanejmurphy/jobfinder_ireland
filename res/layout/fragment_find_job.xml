                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/Gray"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/v_search_item_1"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/btn_search_item_1"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@color/line_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/search_item_2"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_below="@+id/search_item_1"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip" >

                <!--
                <Button
                    android:id="@+id/btn_remove_search_item_2"
                    android:layout_width="18dip"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/white"
                    android:drawableStart="@android:drawable/presence_offline" />
                -->

                <Button
                    android:id="@+id/btn_search_item_2"
                    android:layout_width="fill_parent"
                    android:layout_height="32dip"
                    android:layout_alignParentLeft="true"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/Gray"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/v_search_item_2"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/btn_search_item_2"
                    android:layout_marginBottom="2dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@color/line_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/search_item_3"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_below="@+id/search_item_2"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip" >

                <!--
                <Button
                    android:id="@+id/btn_remove_search_item_3"
                    android:layout_width="18dip"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/white"
                    android:drawableStart="@android:drawable/presence_offline" />
                -->

                <Button
                    android:id="@+id/btn_search_item_3"
                    android:layout_width="fill_parent"
                    android:layout_height="32dip"
                    android:layout_alignParentLeft="true"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/Gray"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/v_search_item_3"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/btn_search_item_3"
                    android:layout_marginBottom="2dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@color/line_divider" />
            </RelativeLayout>

